<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration SYSTEM "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">
			oracle.jdbc.OracleDriver
		</property>
		<property name="hibernate.dialect">
			org.hibernate.dialect.Oracle10gDialect
		</property>
		
		<property name="hibernate.connection.url">
			jdbc:oracle:thin:@ryan2007sdet.chxttewop8dc.us-east-2.rds.amazonaws.com:1521:ORCL
		</property>
		<property name="hibernate.connection.username">
			ryan
		</property>
		<property name="hibernate.connection.password">
			password
		</property>
		
		<!-- Optional Properties -->
		
		<!-- Determines how many connections a single user
		is allowed to a database. -->
		<property name="hibernate.connection.pool_size">
			1
		</property>
		
		<!-- Helpful development property that will console
		log all actions that Hibernate performs on your RDS -->
		<property name="show_sql">
			true
		</property>
		
		<!-- Please use responsibly -->
		<property name="hibernate.hbm2ddl.auto">
			validate
		</property>
		
		<!-- Class Mappings -->
		<mapping class ="com.revature.models.BattleClass"/>
		<mapping class ="com.revature.models.Character"/>
		<mapping class ="com.revature.models.Creature"/>
		<mapping class ="com.revature.models.Inventory"/>
		<mapping class ="com.revature.models.Item"/>
		<mapping class ="com.revature.models.Roles"/>
		<mapping class ="com.revature.models.Stats"/>
		<mapping class ="com.revature.models.Users"/>
		
	</session-factory>
</hibernate-configuration>